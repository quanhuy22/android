<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

<!--        <ImageView-->
<!--            android:id="@+id/btnBack"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:layout_gravity="start"-->
<!--            android:layout_marginStart="20dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:src="@drawable/ic_back"-->
<!--            app:tint="@color/black" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginRight="160dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e_username"
            android:layout_below="@+id/txtcreate"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/input_field"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:layout_marginRight="165dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e_password"
            android:inputType="textPassword"
            android:layout_below="@+id/e_username"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/input_field"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu"
            android:layout_marginRight="130dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e_Confirm_password"
            android:layout_below="@+id/e_username"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/input_field"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginRight="175dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e_mail"
            android:layout_below="@+id/e_password"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/input_field"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đầy đủ"
            android:layout_marginRight="160dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/e_fullname"
            android:layout_below="@+id/e_mail"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:background="@drawable/input_field"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_below="@+id/e_fullname"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:backgroundTint="@color/background_title"
            android:text="Create Account" />


    </LinearLayout>


</ScrollView>